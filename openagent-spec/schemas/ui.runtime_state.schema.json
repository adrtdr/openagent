{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenAgentStudioRuntimeState",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "connection": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "connected": {
          "type": "boolean"
        },
        "latencyMs": {
          "type": "number"
        },
        "authMode": {
          "type": "string"
        },
        "clientId": {
          "type": "string"
        }
      },
      "required": [
        "connected"
      ]
    },
    "sessions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "selectedSessionId": {
      "type": [
        "string",
        "null"
      ]
    },
    "pendingApprovals": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "selectedApprovalId": {
      "type": [
        "string",
        "null"
      ]
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": true
    },
    "policy": {
      "type": "object",
      "additionalProperties": true
    },
    "audit": {
      "type": "object",
      "additionalProperties": true
    },
    "config": {
      "type": "object",
      "additionalProperties": true
    },
    "runtime": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "connection"
  ]
}
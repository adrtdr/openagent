{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PolicyConfig",
  "type": "object",
  "required": [
    "version",
    "rules"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "defaults": {
      "type": "object",
      "properties": {
        "denyByDefault": {
          "type": "boolean"
        },
        "riskTierConfirmAtOrAbove": {
          "enum": [
            "R0",
            "R1",
            "R2",
            "R3",
            "R4"
          ]
        }
      },
      "additionalProperties": false
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "when",
          "then"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "when": {
            "type": "object"
          },
          "then": {
            "type": "object"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
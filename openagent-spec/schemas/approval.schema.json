{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ApprovalRequest",
  "type": "object",
  "required": [
    "approvalId",
    "sessionId",
    "runId",
    "toolCallCanonical",
    "riskTier",
    "requestedAt",
    "expiresAt"
  ],
  "properties": {
    "approvalId": {
      "type": "string"
    },
    "sessionId": {
      "type": "string"
    },
    "runId": {
      "type": "string"
    },
    "toolCallCanonical": {
      "type": "object"
    },
    "toolCallHash": {
      "type": "string"
    },
    "humanSummary": {
      "type": "string"
    },
    "riskTier": {
      "enum": [
        "R0",
        "R1",
        "R2",
        "R3",
        "R4"
      ]
    },
    "requestedAt": {
      "type": "string"
    },
    "expiresAt": {
      "type": "string"
    },
    "status": {
      "enum": [
        "pending",
        "approved",
        "denied",
        "expired"
      ]
    },
    "decision": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenAgentStudioSettings",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "theme": {
      "type": "string",
      "enum": [
        "system",
        "light",
        "dark"
      ]
    },
    "compactMode": {
      "type": "boolean"
    },
    "showToolArgsByDefault": {
      "type": "boolean"
    },
    "redactionLevel": {
      "type": "string",
      "enum": [
        "low",
        "standard",
        "high"
      ]
    },
    "autoScroll": {
      "type": "boolean"
    },
    "timezone": {
      "type": "string"
    },
    "dangerZone": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allowRevealSecrets": {
          "type": "boolean"
        },
        "allowExportAudit": {
          "type": "boolean"
        }
      }
    }
  },
  "required": []
}